<!DOCTYPE html>
<html>
<head>
  <title>Cocktail Essentials</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
</head>

<body>
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
    <%= link_to "", class: "navbar-brand d-flex align-items-center justify-content-between" do %>
    <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
    <!-- <h4 id='cocktail-kit'> COCKTAIL KIT </h4> -->
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to 'Home', cocktails_path, class: 'navbar-lewagon navbar-collapse nav-link' %>
        </li>
      </ul>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to 'Create new cocktail', new_cocktail_path, class: 'navbar-lewagon navbar-collapse btn btn-primary ml-3' %>
        </li>
      </ul>
    </div>
  </div>

  <%= yield %>
</body>
</html>
