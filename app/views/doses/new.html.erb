<div class="container">

  <div class="row justify-content-center">
    <div class='col-md-8'>
      <h3>Add ingredient</h3>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.button :submit, class: 'btn btn-primary mb-3' %>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class='col-md-8'>
      <%= link_to 'Back', cocktail_path(@cocktail) %>
    </div>
  </div>
</div>
