<div class="cocktail-banner">
  <h3><%= @cocktail.name %></h3>
  <% if @cocktail.photo.attached? %>
    <%= cl_image_tag @cocktail.photo.key, height:300, width:400, crop: :fill %>
  <% end %>
</div>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h3>Ingredients</h3>
    </div>
  </div>
  <% @cocktail.doses.each do |dose| %>
    <div class="row justify-content-center">
      <div class="col-md-3">
        <%= "#{dose.ingredient.name} - #{dose.description}" %>
      </div>
      <div class="col-md-3">
        <%= link_to 'Delete', cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?"} %>
      </div>
    </div>
  <% end %>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <p><%= link_to 'Add an ingrdient', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary mt-3' %></p>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <p><%= link_to 'Back', cocktails_path %></p>
    </div>
    <div class="col-md-6">
      <p><%= link_to 'Delete', cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?"} %></p>
    </div>
  </div>
</div>
